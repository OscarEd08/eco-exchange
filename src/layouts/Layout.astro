---
export interface Props {
  title?: string;
}

const { title = "EcoExchange - I.E. 5080 Sor Ana de los Angeles" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Plataforma de intercambio de materiales reciclables por productos eco-friendly para estudiantes del I.E. 5080 Sor Ana de los Angeles" />
    <meta name="keywords" content="reciclaje, intercambio, ecologÃ­a, estudiantes, sostenibilidad, colegio" />
    <title>{title}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html,
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    width: 100%;
    height: 100%;
    line-height: 1.5;
    color: #374151;
  }

  body {
    background: #FFFFFF;
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 600;
  }

  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Button and interactive elements */
  button, input, select, textarea {
    font-family: inherit;
  }

  /* Focus styles for accessibility */
  *:focus {
    outline: 2px solid #22C55E;
    outline-offset: 2px;
  }

  /* Remove focus outline for mouse users */
  *:focus:not(:focus-visible) {
    outline: none;
  }

  /* Responsive images */
  img {
    max-width: 100%;
    height: auto;
  }

  /* Custom selection colors */
  ::selection {
    background: #22C55E;
    color: white;
  }

  ::-moz-selection {
    background: #22C55E;
    color: white;
  }
</style>
</Layout>