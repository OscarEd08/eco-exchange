---
import { DataService } from "../services/DataService.js";

const materials = await DataService.getMaterials();
const products = await DataService.getProducts();
const examples = await DataService.getExamples();
---

<section class="calculator" id="calculadora">
  <div class="container">
    <div class="section-header">
      <h2>Calculadora de Puntos</h2>
      <p>Ingresa el peso de tus materiales y descubre cuántos puntos tienes</p>
    </div>

    <div class="calculator-container">
      <div class="input-section">
        <h3>Tus Materiales</h3>

        {
          materials.map((material: any) => (
            <div class="material-input">
              <div class="material-header">
                <span class="material-icon">{material.icon}</span>
                <label>
                  {material.name} ({material.unit})
                </label>
              </div>
              <input
                type="number"
                id={material.id}
                min="0"
                step="0.1"
                placeholder="0.0"
                data-points-per-unit={material.pointsPerUnit}
              />
              <span class="points-rate">
                {material.pointsPerUnit} puntos por {material.unit}
              </span>
            </div>
          ))
        }

        <button id="calculate-btn" class="calculate-btn">Calcular Puntos</button
        >
      </div>

      <div class="results-section">
        <h3>Tus Puntos</h3>

        <div class="total-points">
          <span class="points-number" id="total-points">0</span>
          <span class="points-text">puntos totales</span>
        </div>

        <div class="breakdown" id="breakdown">
          {
            materials.map((material: any) => (
              <div class="breakdown-item">
                <span>{material.name}:</span>
                <span id={`${material.id}-points`}>0 puntos</span>
              </div>
            ))
          }
        </div>

        <div class="recommendations" id="recommendations">
          <h4>¿Qué puedes obtener?</h4>
          <div id="available-products">
            <p>Ingresa tus materiales para ver qué productos puedes obtener</p>
          </div>
        </div>
      </div>
    </div>

    <div class="quick-examples">
      <h3>Ejemplos Rápidos</h3>
      <div class="examples-grid">
        {
          examples.map((example: any) => (
            <div
              class="example"
              data-example={JSON.stringify(example.materials)}
            >
              <div class="example-materials">{example.description}</div>
              <div class="example-arrow">→</div>
              <div class="example-result">{example.expectedPoints} puntos</div>
              <div class="example-product">{example.productName}</div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  import { CalculatorApp } from "../scripts/CalculatorApp.js";

  // Initialize the app when DOM is loaded
  document.addEventListener("DOMContentLoaded", () => {
    new CalculatorApp();
  });
</script>

<style>
