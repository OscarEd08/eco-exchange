    padding: 1.5rem;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 1px solid #bbf7d0;
  }

  .example:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(34, 197, 94, 0.15);
  }

  .example-materials {
    font-size: 0.875rem;
    color: #374151;
    margin-bottom: 0.5rem;
  }

  .example-arrow {
    font-size: 1.5rem;
    color: #16a34a;
    margin: 0.5rem 0;
  }

  .example-result {
    font-size: 1.25rem;
    font-weight: 600;
    color: #16a34a;
  }

  .example-product {
    font-size: 0.875rem;
    color: #6b7280;
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .calculator {
      padding: 3rem 0;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .calculator-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .input-section,
    .results-section {
      padding: 1.5rem;
    }

    .points-number {
      font-size: 2.5rem;
    }

    .examples-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
